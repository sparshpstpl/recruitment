[ignore]
.*/node_modules/@rebass/grid/dist/index.js
.*/node_modules/@rebass/components/dist/index.js
.*/node_modules/styled-components/*
.*/node_modules/system-components/*
.*/node_modules/grid-styled/*
.*/node_modules/.*\(lib\|test\).*\.json$
.*/api/.*
.*/web/.*
.*/packages/explorer/.*

# ignore not client packages
.*babel.*
.*jest.*
.*eslint.*
.*webassemblyjs.*
.*webpack.*
.*acorn.*
.*browserify.*
.*postcss.*
.*rollup.*

# ignore invalid packages
.*/node_modules/@google-cloud/common-grpc/.*
.*/node_modules/jsonlint-lines-primitives/.*
.*/node_modules/@mapbox/jsonlint-lines-primitives/.*
.*/node_modules/grpc/.*

# forbid using modules if they are not defined in flow-typed
.*/node_modules/lodash/.*
.*/node_modules/react-router/.*

# ignore build folders
.*/build
.*/docs
.*/public
.*/.next
.*/.functions

[untyped]
.*/node_modules/polished/.*
.*/node_modules/react-beautiful-dnd/.*

[include]
../node_modules

[libs]

[lints]
sketchy-null=error
sketchy-number=error
unsafe-getters-setters=error
inexact-spread=error
unnecessary-optional-chain=error
unnecessary-invariant=error

[options]
include_warnings=true
esproposal.optional_chaining=enable

[strict]

